font-family-base = Arial, sans-serif
border-color-base = #ccc
background-color-base = #f0f0f0
text-color-base = #333
padding-base = 10px
padding-small = 5px
border-radius-base = 4px
font-size-base = 14px
font-size-lg = 22px
font-size-md = 20px
font-weight-bold = bold
media-breakpoint-md = 768px
media-breakpoint-sm = 480px

border(n = 1px, style = solid, color = border-color-base)
  if style == 0
    border 0
  else
    border n style color

border-left(n = 1px, style = solid, color = border-color-base)
  if style == none
    border-left none
  else
    border-left n style color

border-right(n = 1px, style = solid, color = border-color-base)
  if style == none
    border-right none
  else
    border-right n style color

border-radius(n = border-radius-base)
  border-radius n

reset-list()
  list-style none
  padding 0
  margin 0

body
  font-family font-family-base

table
  width 100%
  border-collapse collapse
  table-layout fixed

td
  border()
  padding padding-base
  vertical-align top

.logo-cell
  width auto
  padding padding-small

.logo-wrapper
  max-width 120px
  display inline-block
  padding padding-small padding-base

  img
    max-width 100%
    height auto

.search-bar
  text-align right
  padding 25px

  input
    width 40%
    padding padding-small
    font-size font-size-base
    border()
    border-radius()

.logo-navigation
  border()

  td
    border-left(style = 0)
    border-right(style = 0)

.section-navigation
  border()

  td
    text-align center
    font-weight font-weight-bold
    border-left(style = 0)
    border-right(style = 0)

    &:first-child
      border-left()

    &:last-child
      border-right()

.sidebar
  width 15%
  vertical-align top

.content
  width 60%
  vertical-align top
  height 700px

.trends
  width 25%
  vertical-align top

.content-item
  margin-bottom 20px
  text-align center

  img
    width 100%
    max-width 600px
    height auto
    display inline-block
    border()
    background-color background-color-base

ul
  reset-list()

  li
    margin-bottom 10px

a
  text-decoration none
  color text-color-base
  font-weight font-weight-bold

  &:hover
    text-decoration underline

@media screen and (max-width: media-breakpoint-md)
  table, tbody, tr, td
    display block
    width 100%
    border 0

  .logo-navigation
    display block
    border 0

  .logo-cell, .search-bar
    display block
    width 100%
    text-align center
    padding 10px 0
    border 0

  .search-bar
    input
      width 80%

  .section-navigation
    display block
    width 100%
    border 0

    table
      width 100%

    td
      display block
      width 100%
      text-align center
      padding 10px 0
      border 0

  .sidebar, .trends
    display block
    width 100%
    text-align center
    margin 20px 0
    border 0

  .content
    width 100%
    height auto
    overflow-y visible
    order 1

  .sidebar
    order 2

  .trends
    order 3

  .content-item
    img
      max-width 90%

    h2
      font-size font-size-lg

    p
      font-size font-size-base

@media screen and (max-width: media-breakpoint-sm)
  .search-bar
    input
      width 90%

  .content-item
    img
      max-width 100%

    h2
      font-size font-size-md

    p
      font-size font-size-base

  .sidebar, .trends
    text-align center
    margin 10px 0
